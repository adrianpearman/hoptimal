<div class="user_profile">
    <h2>
      Most Recent Beers
    </h2>

  <h3 id="recent_beer_notification">
    <%= link_to "View My Beers List", user_beer_path, class: "btn btn-default btn-primary" %>
  </h3>

  <% @user_recent_4.each do |ub| %>
  <div class="beer_consumed recent_beer_list">
      <div class="user_recent_beer_img">
        <img src="<%= ub.beer.image_url %>" class="beer_img"></br>
      </div>

      <div class="recent_beer_info ">
          <h3>
            Name:
            <p><%= ub.beer.name %></p>
          </h3>

          <h3>
            Style:
            <p><%= ub.beer.category.category_type %></p>
          </h3>

          <h3>
            Rating:
          <span class="star-rating-user-beers">
            <p><%= ub.rating %></p>
          </span>
        </h3>

        <a href="/user_beers/<%=ub.id%>/edit">
          EDIT MY BEER
        </a>

      </p>
      </div>
  </div>
  <% end %>


</div>
