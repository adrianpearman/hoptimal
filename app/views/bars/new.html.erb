<div class="form">

  <%= form_for @bar do |f| %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <%= f.label :address  %>
      <%= f.text_field :address %>
    </div>

    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
    </div>

  <% end %>

</div>
