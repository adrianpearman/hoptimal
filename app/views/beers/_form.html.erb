<div class="form">
<%= form_for [@beer, @user_beer] do |f|%>

  <div>
    <%= hidden_field_tag(:user_id, current_user.id) %>
  </div>

  <div>
    <%= hidden_field_tag(:beer_id, @beer.id) %>
  </div>

  <div>
    <p>Rating:</p>
    <%= f.label :rating, 1 %>
    <%= f.radio_button :rating, 1 %>
    <%= f.label :rating, 2 %>
    <%= f.radio_button :rating, 2 %>
    <%= f.label :rating, 3 %>
    <%= f.radio_button :rating, 3 %>
    <%= f.label :rating, 4 %>
    <%= f.radio_button :rating, 4 %>
    <%= f.label :rating, 5 %>
    <%= f.radio_button :rating, 5 %>
  </div>

  <div>
    <%= f.label :note %>
    <%= f.text_area :note %>
  </div>

  <div>
    <%= submit_tag("Add To 'My List'") %>
  </div>
<% end %>
</div>
