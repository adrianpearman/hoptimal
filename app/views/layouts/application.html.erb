<!DOCTYPE html>
<html>
  <head>
    <title>Hoptimal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  </head>

  <body>

    <nav class = "navbar navbar-default">

      <a href="<%= root_path %>">
        <%= image_tag("hoptimalLogo.png", :id => "hoptimal-logo", :alt => "Hoptimal Logo - Mobile") %>
      </a>
    <% if current_user %>
      <div class="logged-in-nav active">
        <div class="nav-left">
          <i class="fa fa-list"></i>
          <%= link_to "View Beers", beers_path, :class => "nav-item" %>
          <i class="fa fa-list-ol"></i>
          <%= link_to "My Beers", user_beers_show_path, :class => "nav-item" %>
        </div>
        <div class="nav-right">
          <i class="fa fa-user"></i>
          <%= link_to "View Profile", user_path("current"), :class => "nav-item" %>
          <i class="fa fa-sign-out"></i>
          <%= link_to "Log out", session_path("current"), :method => :delete, :class => "nav-item" %>
        </div>
      </div>
    <% else %>
      <div class="logged-out-nav active">
        <i class="fa fa-sign-in"></i>
        <%= link_to "Log in", new_session_path, :class => "nav-item" %>
        <i class="fa fa-user-plus"></i>
        <%= link_to "Sign up", new_user_path, :class => "nav-item" %>
      </div>
    <% end %>
    <a class="toggle-nav" href="#">&#9776</a>
  </nav>


    <main class="main-content">
      <%= yield %>
    </main>

  </body>
</html>
