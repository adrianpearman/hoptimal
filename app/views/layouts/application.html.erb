<!DOCTYPE html>
<html>
  <head>
    <title>Hoptimal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class = "navbar navbar-default">
    <% if current_user %>
      Signed in as <%= link_to current_user.username, user_path("current") %> | <%=link_to "Edit", edit_user_path("current") %> | <%= link_to "Log out", session_path("current"), :method => :delete %>
      | <%= link_to "View Beers", beers_path %> | <%= link_to "My Beers", user_beers_show_path %>
    <% else %>
      <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
    <% end %>
  </nav>

    <%= yield %>
  </body>
</html>
