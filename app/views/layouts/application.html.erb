<!DOCTYPE html>
<html>
  <head>
    <title>Hoptimal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  </head>

  <body>

    <nav class = "navbar navbar-default">
      <a href="<%= root_path %>">
        <%= image_tag("hoptimalLogo.png", :id => "hoptimal-logo", :alt => "Hoptimal Logo - Mobile") %>
      </a>
    <% if current_user %>
      <div class="logged-in-nav">
        <i class="fa fa-user fa-3x"></i>
        <%= link_to current_user.username, user_path("current"), :class => "nav-item" %> | <%= link_to "Log out", session_path("current"), :method => :delete, :class => "nav-item" %>
        | <%= link_to "View Beers", beers_path, :class => "nav-item" %> | <%= link_to "My Beers", user_beers_show_path, :class => "nav-item" %>
      </div>
    <% else %>
      <div class="logged-out-nav">
        <%= link_to "Log in", new_session_path, :class => "nav-item" %> or <%= link_to "Sign up", new_user_path, :class => "nav-item" %>
      </div>
    <% end %>
  </nav>
    <main class="main-content">
      <%= yield %>
    </main>
  </body>
</html>
