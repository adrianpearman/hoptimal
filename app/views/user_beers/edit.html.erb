<h2><%= @beer.name %></h2>
<img src="<%=@beer.image_thumb_url%>" >

<%= form_for @user_beer do |f| %>
  <%= hidden_field_tag(:user_id, current_user.id) %>
  <%= hidden_field_tag(:beer_id, @user_beer.beer_id) %>

  <div>
    <p>Rating:</p>
    <%= f.label :rating, 1 %>
    <%= f.radio_button :rating, 1 %>
    <%= f.label :rating, 2 %>
    <%= f.radio_button :rating, 2 %>
    <%= f.label :rating, 3 %>
    <%= f.radio_button :rating, 3 %>
    <%= f.label :rating, 4 %>
    <%= f.radio_button :rating, 4 %>
    <%= f.label :rating, 5 %>
    <%= f.radio_button :rating, 5 %>
  </div>

  <div>
    <%= f.label :note %>
    <%= f.text_area :note %>
  </div>
  <div>
    <%= submit_tag("Update in 'My List'") %>
  </div>

<% end %>
