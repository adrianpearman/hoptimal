<% @user_beers.each do |ub| %>
  <div class="beer_consumed">
      <div class="beer_img">
        <img src="<%= ub.beer.image_thumb_url %>"></br>
      </div>


      <div class="beer_info display-none">
        <h3><%= ub.beer.name %></h3>
        <h4><%= ub.beer.category.category_type %></h4>
        <p>Rating: <%= ub.rating %></p>
        <a href="/user_beers/<%=ub.id%>/edit">EDIT MY BEER</a> </br>
        <%= link_to 'REMOVE FROM MY LIST',  { action: :destroy, id: ub.id }, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
  </div>
<% end %>
